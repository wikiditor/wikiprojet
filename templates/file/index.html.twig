{% extends 'base.html.twig' %}

{% block title %}Hello FileController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ '/Applications/MAMP/htdocs/public/wikiprojet/src/Controller/FileController.php'|file_link(0) }}">src/Controller/FileController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/Applications/MAMP/htdocs/public/wikiprojet/templates/file/index.html.twig'|file_link(0) }}">templates/file/index.html.twig</a></code></li>
    </ul>
</div>

<div class="right">
</div>

<div class="right">             
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.submit) }}
    {{ form_end(form) }}
</div>

<div class="div">
    <!-- Bouton pour exporter en PDF -->
    <!-- Vous pouvez ajouter une fonction javascript pour obtenir la valeur du champ 'content' et la passer à la route 'export_pdf' -->
    <a id="export_pdf" href="#" class="btn btn-primary mt-3">Exporter en PDF</a>
</div>

<script type="text/javascript">
document.getElementById('export_pdf').onclick = function(){
    var content = document.getElementById('content').value;
    this.href = "{{ path('export_pdf') }}?content=" + encodeURIComponent(content);
};
</script>
{% endblock %}
