{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }}</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ '/Applications/MAMP/htdocs/public/wikiprojet/src/Controller/FileController.php'|file_link(0) }}">src/Controller/FileController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/Applications/MAMP/htdocs/public/wikiprojet/templates/file/index.html.twig'|file_link(0) }}">templates/file/index.html.twig</a></code></li>
    </ul>
</div>
<div class="mb-3">
<a class="btn btn-success" href="{{ path('app_file') }}">Crée un nouveau projet</a>
</div>
<div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Document</th>
                    <th>Date de création</th>
					<th>Modifié le</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% for row in listFiles %}
                <tr>
                    <td><a href="{{ path('app_file_update', {id: row.id, update: true}) }}">{{ row.title }}</a></td>
                    <td>{{ row.creationDate|date('d/m/Y à H:i', 'Europe/Paris')}}</td>
                    <td>{{ row.lastUpdate|date('d/m/Y à H:i', 'Europe/Paris')}}</td>
                    <td><a href="{{ path('app_file_delete', {id:row.id}) }}"><span class="btn btn-danger fa fa-trash"></span></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

