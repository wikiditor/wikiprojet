{% extends 'base.html.twig' %}

{% block title %}Liste
{% endblock %}

{% block stylesheets %}
  		<link rel="stylesheet" href="/assets/css/styleProject.css">
{% endblock %}


{% block header %}
	<header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <button type="button" class="btn-close" aria-label="Close"></button>
                <div class="navbar-nav">
                    <a href="#"><img src="/assets/img/logowiki.png" alt="logowiki"></a>
                </div>
                <div class="navbar-nav">
                    <a class="btn btn-success" href="{{ path('app_article') }}">Retour</a>
                </div>
            </div>
            </div>
        </nav>

    </header>
{% endblock %}

{% block body %}
	

	<main>


		<div class="container-fluid">
			<hr class="separator-bar">
		</div>

		<section id="projet">
			<div class="container-fluid">
				<h2>Mes Dossiers</h2>
			</div>
		</section>
    <nav class="navbar navbar-expand-lg bg-body-tertiary"></nav>

		<section class="container-fluid">
			<div class="list-group">
				<div class="d-flex justify-content-between">
					<div>
						<label class="folder" for=""></label>
					</div>
					
					<button>
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewbox="0 0 16 16">
							<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
						</svg>
					</button>
				</div>
			</div>

			{% if listFiles is not empty %}
				<div class="table-responsive">
					<table class="table table-striped table-sm">
						<thead>
							<tr>
								<th>Document</th>
								<th>Date de création</th>
								<th>Dernière modification</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							{% for row in listFiles %}
								<tr>
									<td>
										<a href="{{ path('app_file_update', {id: row.id, update: true}) }}">
											<img src="/assets/img/folderblack.jpg" alt="">{{ row.title }}</a>
									</td>
									<td>{{ row.creationDate|date('d/m/Y à H:i', 'Europe/Paris')}}</td>
									<td>{{ row.lastUpdate|date('d/m/Y à H:i', 'Europe/Paris')}}</td>
									<td>
										<a href="{{ path('app_file_delete', {id:row.id}) }}">
											<span class="btn btn-primary fa fa-trash"></span>
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			{% else %}
				<p>Aucun fichier trouvé.</p>
			{% endif %}
		</section>

		<div class="help-icon">
			<a>
				<ul><img src="/assets/img/aide4.svg" alt="aide"></ul>
			</a>
		</div>
	</main>
	<br style="clear: both;" />

	{% block footer %}
{% endblock %}


{% endblock %}
