{% extends 'base.html.twig' %}

{% block title %}Connexio..{% endblock %}


{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="d-flex justify-content-center vh-100">

        <div class="container mt-5">

            <form method="post" >


                <h1>Se connecter</h1>

                <label for="inputEmail" class="form-label">Adresse e-mail</label>
                <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Entrez votre adresse de courriel">

                <label for="inputPassword" class="form-label">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Entrez votre mot de passe">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <p class="text-end">
                    <a class="liengauche" href="#">Mot de passe oublié?</a>
                </p>

                <div class="bouton">
                    <button class="btn btn-primary" type="submit">Se connecter</button>
                </div>

            </form> 
         </div>

    </div>

{% endblock %}