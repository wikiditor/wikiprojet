{% extends 'base.html.twig' %}

{% block title %}Connexio..
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/assets/css/styleLogin.css">
{% endblock %}

{% block body %}

	{% if error %}
		<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	

	<div class="d-flex justify-content-center vh-100">

		<form method="POST" class="col-12 col-md-5 col-xl-5">

			<h1>Se connecter</h1>


			<label for="exampleFormControlInput1" class="form-label">Adresse e-mail</label>
			<input type="email" name="email" id="inputEmail" class="form-control" id="exampleFormControlInput1" placeholder="Entrez votre adresse de courriel">
			<label for="inputPassword5" class="form-label">Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control" aria-labelledby="passwordHelpBlock" placeholder="Entrez votre mot de passe">
			<div id="passwordHelpBlock" class="form-text"></div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<p class="text-end">
				<a class="liengauche" href="#">Mot de passe oubli√©?</a>
			</p>
			<div class="bouton">
				<button class="btn btn-primary" type="submit">Se connecter</button>

			</div>
		</form>

	</div>

{% endblock %}
